{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}
{% block description %}{{ article.text|raw }}{% endblock %}

{% block body %}

<section id="realizace">
  <div class="container" id="content-wrap">
  
    <div class="row">
      <div class="project-heading col-md-12">
        <h1 class="articles text-center">{{ article.title }}</h1>
      </div>
    </div>
    
      <div class="row pt-5">
        <div class="col-md-7 col-xs-12">
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Carousel indicators -->
              <ol class="carousel-indicators">
                  {% for image in article.attachments %}
                  <li data-target="#carousel" data-slide-to="{{ loop.index0 }}" {% if loop.index0 == 0 %} class="active" {% endif %}></li>
                  {% endfor %}
              </ol>
          
              <!-- Wrapper for slides -->
              <div class="carousel-inner" role="listbox">
              {% for image in article.attachments %}
                <div {% if loop.index0 == 0 %} class="item active" {% else %} class="item" {% endif %}>
                      <img src="{{ asset('/uploads/images/attachment/' ~ image.image) }}" class="img-responsive" alt="Work">
                </div>
                {% endfor %}
              </div>
          
              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left fas fa-angle-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right fas fa-angle-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
              </a>
          </div>
        </div>
        <div class="addPadding col-md-5 col-xs-12">
            <p class="text-center">{{ article.text|raw }}</p>
        </div>
      </div>
  </div>    
</section>

{#Footer#}
{% include 'site/footer-realizace.html.twig' %}

{% endblock %}

<!DOCTYPE html>
<html lang="cs">
    {% set currentPage = app.request.attributes.get('_route') %}
    <head>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-3LPGHPMMXP"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-3LPGHPMMXP');
        </script>
     
        
        <meta charset="UTF-8">

        <title>{% block title %}NYDO Development –  Dáváme domům novou tvář{% endblock %}</title>
        <meta name="description" content="{% block description %}Společnost NYDO se zaměřuje na revitalizaci starých domů, bytů a nebytových prostor. Zejména dává novou tvář starým hnízdečkům a dělá je tak atraktivnější.{% endblock %}">

        <!-- MOBILE SPECIFIC -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <meta name="Content-Language" content="cs">
        <meta name="keywords" content="rekonstrukce, revitalizace, development, nemovitost, byt, bydlení, flipping houses, kvalita">
        <meta name="author" content="NYDO Development">
        
        {% block facebook %}
        <meta property="og:locale" content="en_US">
        <meta property="og:type" content="website">
        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:description" content="Společnost NYDO se zaměřuje na revitalizaci starých domů, bytů a nebytových prostor. Zejména dává novou tvář starým hnízdečkům a dělá je tak atraktivnější.">
        <meta property="og:url" content="https://nydo.cz/">
        <meta property="og:site_name" content="NYDO Development">
        {% endblock %}

        {% block ogimage %}
            <meta property="og:image" content="{{ asset('images/logo1.png') }}">
        {% endblock ogimage %}

        <!-- FAVICONS ICON -->
        <link rel="icon" type="image/png" sizes="150x150" href="{{ asset('images/nydo-favicon.png') }}">
        <link rel="shortcut icon" type="image/x-icon"  sizes="150x150" href="{{ asset('images/nydo-favicon.png') }}" />


        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
        <link rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/v4-shims.css">
        
       
        <!-- Main css -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}">

        {% endblock %}

        <!-- PRE LOADER -->
        <div class="preloader">
            <div class="spinner">
                <span class="spinner-rotate"></span>
            </div>
        </div>

        {#Header#}
        {{ render(controller('App\\Controller\\NydoController::header', { currentPage: currentPage })) }}

        {# Body #}
        {% block body %}
        
        {% endblock %}
        

        <!-- START SCROLL TO TOP  -->
        <div class="scrollup">
            <a href="#homepage"><i class="fa fa-chevron-up"></i></a>
        </div>

        {% block javascripts %}

        <!-- SCRIPTS -->
        <script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/smoothscroll.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/wow.min.js') }}" type="text/javascript"></script>

        <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>

        <script src="{{ asset('js/dz.ajax.js') }}"></script><!-- Contact Us -->         
        <script src="{{ asset('js/custom.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
